<?xml version="1.0" encoding="utf-8"?>
<StackLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="$color:dark_gray_bg"
    ohos:orientation="vertical">

    <ListContainer
        ohos:id="$+id:rovers_list_container"
        ohos:height="match_parent"
        ohos:width="match_parent"
        ohos:background_element="$color:dark_gray_bg"
        ohos:layout_alignment="center"
        ohos:rebound_effect="true"
        ohos:scrollbar_fading_delay="100000"
        ohos:top_padding="40vp"/>

    <DirectionalLayout
        xmlns:ohos="http://schemas.huawei.com/res/ohos"
        ohos:height="40vp"
        ohos:width="match_parent"
        ohos:alignment="center"
        ohos:background_element="#FF777171"
        ohos:layout_alignment="top"
        ohos:orientation="horizontal">

        <Text
            ohos:id="$+id:tvRoverNames"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:layout_alignment="center"
            ohos:text="Mars Rovers"
            ohos:text_alignment="center"
            ohos:text_color="#FFFFFFFF"
            ohos:text_size="16fp"
            ohos:text_weight="600"
            ohos:top_margin="4vp"
            ohos:truncation_mode="auto_scrolling"/>

    </DirectionalLayout>
</StackLayout>